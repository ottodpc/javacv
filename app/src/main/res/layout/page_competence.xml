<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_dynamic_secondary80"
    tools:context=".CompetenceActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/textViewMyLangage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/langages"
                android:textColor="@color/black"
                android:textSize="30dp" />

            <ListView
                android:id="@+id/ListViewMyLangage"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                tools:listitem="@layout/item_langages"/>


            <TextView
                android:id="@+id/textViewMyProjet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mesProjets"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <ListView
                android:id="@+id/ListViewMyProjet"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                tools:listitem="@layout/item_projet"/>



        </LinearLayout>

    </LinearLayout>
</LinearLayout>